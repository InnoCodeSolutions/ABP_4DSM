{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["react", "react-native", "react-native-vector-icons"], // âœ… removido "jest" e "@testing-library/jest-native"
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"]
    }
  },
  
  "include": ["src"]
}
